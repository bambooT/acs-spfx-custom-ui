{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "./test/**/*.tsx",
    "./test/**/*.ts",
    "./lib/**/*.tsx",
    "./lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}